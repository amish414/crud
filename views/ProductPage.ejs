 </head>
     <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
              <div class="navbar-header">
              </div>
              <ul class="nav navbar-nav">
                <li class="active"><a href="/ProductPage">Home</a></li>
                <li><a href="/addDriver">Add Vehicle</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right"> 
                <li><a href="#"><span class="glyphicon glyphicon-user"></span><%= user1%></a></li>
                <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
              </ul>
            </div>

          </nav>
             <div class="container">
                 <div class="row col-md-6 col-md-offset-2 custyle">
                 <table class="table table-striped custab" >
                 <thead>
                     <tr>
                         <th>serial-No</th>
                         <th>Vechicle Serial Number</th>
                         <th>Action</th>
                     </tr>
                 </thead>
                 <tbody>
                     <% for(var i=0; i < users.length; i++) { %>
                         <tr>
                           <td><%= i+1 %></td>
                           <td><%= users[i].Vechicle_SR_NO %></td>
                            <td class="text-center">
                             <a class='btn btn-info btn-xs' href="/editpage/<%=users[i].primaryKey%>">
                                 <span class="glyphicon glyphicon-edit">
                                 </span> Edit</a> 
                                        <a  class="btn btn-danger btn-xs" onclick="deleteproduct('<%=users[i].primaryKey%>')" >
                                            <span class="glyphicon glyphicon-remove">
                                        </span> Del</a
                                 
                            </tr>
                       <% } %>
                     </tbody> 
                 </table>
                 <!-- <a href="/addDriver" class="btn btn-primary btn-xs pull-right"> Add new categories</a> -->
             </div>
     </body>
     <script>
       function deleteproduct(primarykey){
        const choice = confirm("ARE YOU SURE WANT TO DELETE THIS");
        
        if(choice){
          const xhr = new XMLHttpRequest();
          console.log('inside if block')
          xhr.open('GET',`/deletepage/${primarykey}`,false);
          xhr.send();
          window.location.reload();
        }
        else{
          console.log('Delete request cancelled');
        }
        
       }
      </script>
